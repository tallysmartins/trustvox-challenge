<section class="phx-hero">
  <h1><%= gettext "List of companies" %></h1>
  <p> Dint find? <%= link "Click here", to: Routes.companies_path(@conn, :new) %> to register it!
</section>

<section class="row">
  <article class="column">
    <%= for company <- @companies do %>
      <div class="company" style="">
        <p>NAME: <%= link company.name, to: back_to_new(company) %></p>
        <p style="border-bottom: 1px solid;">WEBSITE: <%= company.website %></p>
      </div>
    <% end %>
  </article>
</section>
